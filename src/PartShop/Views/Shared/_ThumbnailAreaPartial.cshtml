@model IEnumerable<MenuItem>

@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-shop">
        <div class="row">
            <h2 class="text-success">@Model.FirstOrDefault().Category.Name</h2>
        </div>
        @if (!Model.Any())
        {
            <h3 style="color:red; text-align:center">В момента няма наличност!</h3>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="border border-info rounded col-12" style="margin-bottom:10px;margin-top:10px;padding:10px;">
                    <div class="row">
                        <div class="col-md-3 col-sm-12">
                            <img src="@item.Image" width="100%" style="display:block; margin:auto" alt="Няма намерена снимка за: @item.Name" />
                        </div>
                        <div class="col-md-9 col-sm-12">
                            <div class="row pr-3">
                                <div class="col-8">
                                    <label class="text-primary" style="font-size:21px;color:maroon">@item.Name</label>
                                </div>
                                <div class="col-4 text-right" style="color:maroon;">
                                    <h4>@item.Price лв.</h4>
                                </div>
                            </div>
                            <div class="row col-12 text-justify d-none d-md-block">
                                <p>@Html.Raw(item.Description)</p>
                            </div>
                            <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                                <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">Детайли</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        <div class="p-4"></div>
    </div>
}