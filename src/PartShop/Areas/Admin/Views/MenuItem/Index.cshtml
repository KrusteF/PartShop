@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Продукти";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<div class="backgroundWhite border">
    <div class="row">
        <div class="col-6">
            <div class="text-info h2">Продукти</div>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateNewButtonPartial" />
        </div>
    </div>
    <br/>
    <div>
        @if (Model.Count() > 0)
        {
            <table style="text-align:center" class="border table table-striped">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.SubCategoryId)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.Price)</td>
                <td>@Html.DisplayFor(m => item.Category.Name)</td>
                <td>@Html.DisplayFor(m => item.SubCategory.Name)</td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>Няма намерени продукти...</p>
        }
    </div>
</div>


