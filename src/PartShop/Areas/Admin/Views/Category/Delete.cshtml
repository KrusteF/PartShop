@model Category
@{
    ViewData["Title"] = "Изтрий категорията";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<h3 class="text-danger">Сигурен ли си че искаш да изтриеш тази категория?</h3>
<br/>
<form method="post" asp-action="Delete">
    <div class="border backgroundWhite">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label">Име на категорията</label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListPartial" model="@Model.Id" />
            </div>
        </div>
    </div>
</form>

