@page
@using PartShop.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
<br/>
<h2 class="text-info">Създай нов акаунт</h2>
<br/>
<form method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Name" class="col-form-label">Име</label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Input.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Email" class="col-form-label">Имейл</label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Input.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.PhoneNumber" class="col-form-label">Телефон</label>
            </div>
            <div class="col-5">
                <input asp-for="Input.PhoneNumber" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Input.PhoneNumber"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.StreetAddress" class="col-form-label">Адрес</label>
            </div>
            <div class="col-5">
                <input asp-for="Input.StreetAddress" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Input.StreetAddress"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.City" class="col-form-label">Град</label>
            </div>
            <div class="col-5">
                <input asp-for="Input.City" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Input.City"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.PostalCode" class="col-form-label">Пощенски код</label>
            </div>
            <div class="col-5">
                <input asp-for="Input.PostalCode" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Input.PostalCode"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Password" class="col-form-label">Парола</label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Input.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.ConfirmPassword" class="col-form-label">Потвърди паролата</label>
            </div>
            <div class="col-5">
                <input asp-for="Input.ConfirmPassword" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
        </div>
        @if (User.IsInRole(SD.AdminUser))
        {
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-5">
                    <input type="radio" value="@SD.AdminUser" name="rdUserRole" checked/> @SD.AdminUser
                </div>
            </div>
        }
        <div class="form-group row">
            <div class="col-5 offset-2">
                <button type="submit" class="btn btn-primary form-control">Регистрация</button>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}